echo "Script location path (dir) : $base"
#
echo "Changing to Django Directory"
cd "$base/../Dev"
#
echo "Creating Virtual Enviroment"
#virtualenv env --python=python
#env/bin/pip install -r requeriments.pip
#env/bin/python manage.py jenkins

